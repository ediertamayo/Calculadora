<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ediertamayo.calculadora.MainActivity">

    <Button
        android:id="@+id/bAc"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        android:onClick="calcular"
        android:text="AC"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bModulo"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/bIgual"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/green"
        android:text="="
        android:onClick="calcular"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bAc"
        app:layout_constraintTop_toBottomOf="@+id/bDividido"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/bPunto"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="calcular"
        android:background="@color/red"
        android:text="."
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b3" />

    <Button
        android:id="@+id/b0"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:onClick="calcular"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/bPunto"
        app:layout_constraintTop_toBottomOf="@+id/b2" />

    <Button
        android:id="@+id/bModulo"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:onClick="calcular"
        android:text="%"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/b0"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/bDividido"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="/"
        android:textSize="40dp"
        android:onClick="calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bModulo"
        app:layout_constraintTop_toBottomOf="@+id/bPor" />

    <Button
        android:id="@+id/b3"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:onClick="calcular"
        android:text="3"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/b2"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:onClick="calcular"
        android:text="2"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/b3"
        app:layout_constraintTop_toBottomOf="@+id/b5" />

    <Button
        android:id="@+id/b1"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:onClick="calcular"
        android:background="@color/red"
        android:text="1"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/b6" />

    <Button
        android:id="@+id/bPor"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="calcular"
        android:background="@color/red"
        android:text="*"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/bMenos" />

    <Button
        android:id="@+id/b4"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:onClick="calcular"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="4"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b5"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:onClick="calcular"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="5"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/b4"
        app:layout_constraintTop_toBottomOf="@+id/b8" />

    <Button
        android:id="@+id/b6"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginTop="8dp"
        android:onClick="calcular"
        android:background="@color/red"
        android:text="6"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@+id/b9" />

    <Button
        android:id="@+id/bMenos"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:onClick="calcular"
        android:layout_marginTop="8dp"
        android:background="@color/red"
        android:text="-"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bMas" />

    <TextView
        android:id="@+id/tvBarra"
        android:layout_width="355dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray"
        android:gravity="end"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b8"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:background="@color/red"
        android:onClick="calcular"
        android:text="8"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/b7"
        app:layout_constraintTop_toBottomOf="@+id/tvBarra" />

    <Button
        android:id="@+id/b9"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:background="@color/red"
        android:onClick="calcular"
        android:text="9"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/b8"
        app:layout_constraintTop_toBottomOf="@+id/tvBarra" />

    <Button
        android:id="@+id/bMas"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/red"
        android:text="+"
        android:textSize="40dp"
        android:onClick="calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/b9"
        app:layout_constraintTop_toBottomOf="@+id/tvBarra" />

    <Button
        android:id="@+id/b7"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/red"
        android:onClick="calcular"
        android:text="7"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBarra" />
</android.support.constraint.ConstraintLayout>
